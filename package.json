{
  "name": "@pulse8-ai/chat",
  "version": "0.2.0",
  "description": "A pluggable, customizable chat UI component package for React applications. Supports streaming, custom tool renderers, and any AI backend.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./ui": {
      "import": "./dist/components/ui/index.js",
      "types": "./dist/components/ui/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev": "tsc --watch",
    "dev:css": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "storybook": "npm run build:css && storybook dev -p 6006 --ci",
    "build-storybook": "npm run build:css && storybook build",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "chat",
    "ui",
    "components",
    "streaming",
    "markdown",
    "ai",
    "llm",
    "chatbot",
    "customizable",
    "tool-renderers",
    "openai",
    "anthropic",
    "gemini",
    "claude",
    "gpt",
    "sse",
    "server-sent-events"
  ],
  "author": "Pulse8 AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pulse8-ai/pulse8-ai-chat.git"
  },
  "bugs": {
    "url": "https://github.com/pulse8-ai/pulse8-ai-chat/issues"
  },
  "homepage": "https://github.com/pulse8-ai/pulse8-ai-chat#readme",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.0",
    "uuid": "^10.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "@storybook/addon-essentials": "^8.3.0",
    "@storybook/addon-interactions": "^8.3.0",
    "@storybook/addon-links": "^8.3.0",
    "@storybook/blocks": "^8.3.0",
    "@storybook/react": "^8.3.0",
    "@storybook/react-vite": "^8.3.0",
    "@storybook/test": "^8.3.0",
    "@tailwindcss/cli": "^4.1.14",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prettier": "^3.8.0",
    "react": "^19.1.2",
    "react-dom": "^19.1.2",
    "storybook": "^8.3.0",
    "tailwindcss": "^4.1.14",
    "typedoc": "^0.27.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^5.4.0"
  }
}
